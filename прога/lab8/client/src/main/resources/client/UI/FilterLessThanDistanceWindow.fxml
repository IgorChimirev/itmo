<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="client.UI.FilterLessThanDistanceWindowController"
            prefHeight="150"
            prefWidth="300">
    <children>
        <Label layoutX="14.0" layoutY="14.0" text="%distance_label">
            <font>
                <Font size="14.0" />
            </font>
        </Label>
        <TextField fx:id="distanceField" layoutX="14.0" layoutY="40.0" prefWidth="272.0" promptText="%distance_prompt" />
        <Button fx:id="submitButton" layoutX="110.0" layoutY="80.0" mnemonicParsing="false" text="%submit" />
        <Label fx:id="messageLabel" layoutX="14.0" layoutY="120.0" textFill="RED" />
    </children>
</AnchorPane>