<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="600.0" prefWidth="500.0"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="client.UI.UpdateWindowController">

    <Label layoutX="160.0" layoutY="20.0" text="%update_window_title" style="-fx-font-weight: bold; -fx-font-size: 16;"/>

    <!-- MenuButton для выбора ID -->
    <MenuButton fx:id="idChoiceField" layoutX="100.0" layoutY="50.0" prefWidth="200.0" text="Выберите ID"/>

    <!-- Основные поля -->
    <TextField fx:id="nameForm" layoutX="100.0" layoutY="90.0" prefWidth="200.0" promptText="%name"/>

    <!-- Координаты -->
    <TextField fx:id="coordXForm" layoutX="100.0" layoutY="130.0" prefWidth="90.0" promptText="%coord_x"/>
    <TextField fx:id="coordYForm" layoutX="210.0" layoutY="130.0" prefWidth="90.0" promptText="%coord_y"/>

    <!-- LocationFrom -->
    <TextField fx:id="fromXForm" layoutX="100.0" layoutY="170.0" prefWidth="90.0" promptText="%from_x"/>
    <TextField fx:id="fromYForm" layoutX="210.0" layoutY="170.0" prefWidth="90.0" promptText="%from_y"/>
    <TextField fx:id="fromZForm" layoutX="100.0" layoutY="210.0" prefWidth="90.0" promptText="%from_z"/>
    <TextField fx:id="fromNameForm" layoutX="210.0" layoutY="210.0" prefWidth="90.0" promptText="%from_name"/>

    <!-- LocationTo -->
    <TextField fx:id="toXForm" layoutX="100.0" layoutY="250.0" prefWidth="90.0" promptText="%to_x"/>
    <TextField fx:id="toYForm" layoutX="210.0" layoutY="250.0" prefWidth="90.0" promptText="%to_y"/>
    <TextField fx:id="toZForm" layoutX="100.0" layoutY="290.0" prefWidth="90.0" promptText="%to_z"/>
    <TextField fx:id="toNameForm" layoutX="210.0" layoutY="290.0" prefWidth="90.0" promptText="%to_name"/>

    <!-- Distance -->
    <TextField fx:id="distanceForm" layoutX="100.0" layoutY="330.0" prefWidth="200.0" promptText="%distance"/>

    <!-- Кнопка и сообщения -->
    <Button fx:id="updateSubmitButton" layoutX="160.0" layoutY="370.0" text="%submit"/>
    <Label fx:id="messageLabel" layoutX="50.0" layoutY="410.0" prefWidth="400.0" textFill="RED"/>

</AnchorPane>